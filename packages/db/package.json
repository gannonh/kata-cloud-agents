{
  "name": "@kata/db",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./src/schema.ts",
      "import": "./dist/schema.js"
    },
    "./client": {
      "types": "./src/client.ts",
      "import": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "db:dev": "convex dev --config ./convex.json",
    "db:deploy": "convex deploy --config ./convex.json",
    "db:codegen": "convex codegen --config ./convex.json"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "convex": "^1.28.4"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "@types/pg": "^8.16.0",
    "tsx": "^4.21.0",
    "vitest": "^3.2.4"
  }
}
