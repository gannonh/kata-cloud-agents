{
	"$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		}
	},
	"formatter": {
		"enabled": false
	},
	"assist": { "actions": { "source": { "organizeImports": "off" } } },
	"files": {
		"includes": [
			"**",
			"!**/dist",
			"!**/build",
			"!**/.turbo",
			"!**/coverage"
		]
	}
}
